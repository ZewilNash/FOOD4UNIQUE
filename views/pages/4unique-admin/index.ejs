                  <a data-order-id="<%= completedOrders[i]._id %>"  href="#" id="completedOrder_delete" style="color:red;">Delete Order</a>
                  
                  
                  
                  
                </div>
      
      
      
              </div>
            <% } %>
          </div>
      </div>
      

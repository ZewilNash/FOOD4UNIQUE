    <!-- show all reviews -->
    <div class="hide container" id="show_all_reviews">
      <div class="row">
        <% for(var i = 0; i < reviews.length; i++) { %>
            <div style="text-align: center;align-items: center;justify-content: center;width: 100%;height: 100%;background-image: url('<%= reviews[i].review_image %>');box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;flex-direction: column;margin-top: 20px;display: flex;" class="col-md-4 mt-5">
              <h1>REVIEW FOR <%= reviews[i].food.name %></h1>
              <h1>REVIEW LINK:</h1>
              <a href=" <%= reviews[i].review_link %>">Review Link</a>

              <a data-review-id="<%= reviews[i]._id  %>" id="delete_review" href="#" style="text-align: center;color: red;margin-top: 10px;">DELETE</a>
              
            </div>
           
        <% } %>
      </div>
     
    </div>
    <!-- end show reviews -->

    <div class="hide" id="create_review">
